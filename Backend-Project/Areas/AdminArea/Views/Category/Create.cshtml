@model CategoryCreateVM
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description"> Create Categor Form </p>
                    <form method="post" class="forms-sample">
                        <div class="form-group">
                            <label asp-for="CategoryName"></label>
                            <input asp-for="CategoryName" class="form-control" placeholder="Name">
                            <span class="text-danger" asp-validation-for="CategoryName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryDescription"></label>
                            <input asp-for="CategoryDescription" class="form-control" placeholder="Description">
                            <span class="text-danger" asp-validation-for="CategoryDescription"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button class="btn btn-dark">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial"></partial>
}


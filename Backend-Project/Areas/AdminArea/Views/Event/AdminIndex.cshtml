@model EventVM
@{
    ViewData["Title"] = "AdminIndex";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Event Table</h4>
                    <a asp-action="Create" class="btn btn-success">CREATE Event</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>EventName</th>
                                    <th>EventDateTime</th>
                                    <th>StartTime</th>
                                    <th>EndTime</th>
                                    <th>Venue</th>
                                    <th>Settings</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Events)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/img/event/@item.ImageUrl" width="100" height="100" />
                                        </td>
                                        <td>
                                            @item.EventName
                                        </td>
                                        <td>
                                            @item.EventDateTime.ToString("MMMM dd")
                                        </td>
                                        <td>
                                            @item.StartTime
                                        </td>
                                         <td>
                                            @item.EndTime
                                        </td>
                                        <td>
                                            @item.Venue
                                        </td>
                                        <td>
                                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">
                                                <i class="mdi mdi-account-card-details"></i>
                                            </a>
                                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



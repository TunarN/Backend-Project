@model EventDetailVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <img src="~/img/event/@Model.ImageUrl" width="100" height="100" />
                <p>Day:<h4 class="card-title">@Model.EventDateTime</h4></p>
                <p>Month:<h4 class="card-title">@Model.StartTime</h4></p>
                <p>@Model.EndTime></p>
                <p>Time:<h4 class="card-title">@Model.EventName</h4></p>
                <p>Venue:<h4 class="card-title">@Model.Venue</h4></p>

                <p class="card-title">@Model.EventDesc</p>

                <p>
                    Speakers:@foreach (var speaker in Model.EventSpeakers)
                    {
                        <br>
                        <img src="~/img/event/@speaker.Speakar.ImageUrl" width="100" height="100" />
                    <p>Name:<h4 class="card-title">@speaker.Speakar.Name</h4></p>
                    <p>Position:<h4 class="card-title">@speaker.Speakar.Position</h4></p>

                    }</p>




                <a asp-action="index" class="btn btn-dark">Return Back</a>
            </div>
        </div>
    </div>
</div>

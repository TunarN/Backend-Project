@model List<Skills>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Skills Table</h4>
                    <a asp-action="Create" class="btn btn-success">Create Skills</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>PercentLanguage</th>
                                    <th>PercentTeamLeader.</th>
                                    <th>PercentDevelopment.</th>
                                    <th>PercentDesign.</th>
                                    <th>PercentInnovation.</th>
                                    <th>PercentComminication.</th>
                                    <th>Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td> Language @item.PercentLanguage</td>
                                        <td> TeamLeader @item.PercentTeamLeader</td>
                                        <td> Development @item.PercentDevelopment</td>
                                        <td> Design @item.PercentDesign</td>
                                        <td> Innovation @item.PercentInnovation</td>
                                        <td> Comminication @item.PercentComminication</td>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">
                                                <i class="mdi mdi-account-card-details"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model List<Blog>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog Table</h4>
                    <a asp-action="Create" class="btn btn-success">CREATE Blog</a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>DateTime</th>
                                    <th>BlogTitle</th>
                                    <th>BlogDesc</th>
                                    <th>Settings</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/img/blog/@item.ImageUrl" width="100" height="100" />
                                        </td>
                                         <td>
                                            @item.DateTime.ToString("MMMM dd")
                                        </td>
                                         <td>
                                             @item.BlogTitle.Substring(0,10)...
                                        </td>
                                         <td>
                                            @item.BlogDesc.Substring(0,10)...
                                        </td>
                                        <td>
                                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">
                                                <i class="mdi mdi-account-card-details"></i>
                                            </a>
                                            <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                            <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

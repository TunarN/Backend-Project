@model Blog
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                      <div class="card-body">
                        <img src="~/img/blog/@Model.ImageUrl" width="100" height="100" />
                        <p>@Model.BlogTitle</p>
                         <p>@Model.BlogDesc</p>
                          <p>@Model.DateTime.ToString("MMMM dd")</p>
                        <a asp-action="Index" class="btn btn-dark">BACK</a>
                      </div>
                    </div>
                  </div>
    </div>
</div

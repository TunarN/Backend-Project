@model CourseUpdateVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                      <div class="card-body">
                          <img src="~/img/course/@Model.ImageUrl" width="150" height="150"/>
                        <a asp-action="Index" class="btn btn-dark">BACK</a>
                      </div>
                    </div>
                  </div>
    </div>
     <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description"> Create Categor Form </p>
                    <form method="post" class="forms-sample" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Photo"></label>
                            <input asp-for="Photo" class="form-control">
                            <span class="text-danger" asp-validation-for="Photo"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NameDesc"></label>
                            <input asp-for="NameDesc" class="form-control" placeholder="Desc">
                            <span class="text-danger" asp-validation-for="NameDesc"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartDate"></label>
                            <input asp-for="StartDate" class="form-control" placeholder="StartDate">
                            <span class="text-danger" asp-validation-for="StartDate"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Month"></label>
                            <input asp-for="Month" class="form-control" placeholder="Month">
                            <span class="text-danger" asp-validation-for="Month"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="DurationHour"></label>
                            <input asp-for="DurationHour" class="form-control" placeholder="DurationHour">
                            <span class="text-danger" asp-validation-for="DurationHour"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="SkillLevel"></label>
                            <input asp-for="SkillLevel" class="form-control" placeholder="SkillLevel">
                            <span class="text-danger" asp-validation-for="SkillLevel"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Language"></label>
                            <input asp-for="Language" class="form-control" placeholder="Language">
                            <span class="text-danger" asp-validation-for="Language"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="StudentsCount"></label>
                            <input asp-for="StudentsCount" class="form-control" placeholder="StudentsCount">
                            <span class="text-danger" asp-validation-for="StudentsCount"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Assesment"></label>
                            <input asp-for="Assesment" class="form-control" placeholder="Assesment">
                            <span class="text-danger" asp-validation-for="Assesment"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Fee"></label>
                            <input asp-for="Fee" class="form-control" placeholder="Fee">
                            <span class="text-danger" asp-validation-for="Fee"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="CourseDesc"></label>
                            <input asp-for="CourseDesc" class="form-control" placeholder="CourseDesc">
                            <span class="text-danger" asp-validation-for="CourseDesc"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="AboutCourse"></label>
                            <input asp-for="AboutCourse" class="form-control" placeholder="AboutCourse">
                            <span class="text-danger" asp-validation-for="AboutCourse"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Apply"></label>
                            <input asp-for="Apply" class="form-control" placeholder="Apply">
                            <span class="text-danger" asp-validation-for="Apply"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Certification"></label>
                            <input asp-for="Certification" class="form-control" placeholder="Certification">
                            <span class="text-danger" asp-validation-for="Certification"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="CategoryId"></label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select" aria-label="Default select example">
                            </select>
                            <span class="text-danger" asp-validation-for="Photo"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button class="btn btn-dark">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div


@section Scripts{
  <partial name="_ValidationPartial"></partial>
}